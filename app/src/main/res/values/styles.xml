<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--FONTS-->
    <style name="poppinsW500Medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="poppinsW500Regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!--Texts Style-->
    <style name="poppinsW500Medium20h24w500" parent="poppinsW500Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="poppinsW500Regular20h24w500" parent="poppinsW500Regular">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <!--Toolbar-->
    <style name="toolbarHeader" parent="poppinsW500Medium20h24w500">
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Button-->
    <style name="buttonStyle" parent="poppinsW500Regular">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button</item>
    </style>
</resources>