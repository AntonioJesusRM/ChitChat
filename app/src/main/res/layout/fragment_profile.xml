<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment">
    <FrameLayout
        android:id="@+id/FrameLImageProfileFragment"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/CardVImageProfileFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="12dp"
            app:cardCornerRadius="40dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">

            <ImageView
                android:id="@+id/imageVProfileFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tint="@color/grayD9D9D9"
                android:contentDescription="@string/photoProfileDescription"
                android:src="@drawable/baseline_person_24" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:elevation="12dp"
            app:cardCornerRadius="40dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:layout_gravity="bottom|end"
            android:backgroundTint="@color/azul31b1cd">
            <ImageView
                android:id="@+id/ImageVEditProfileFragment"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/editProfileDescription"
                android:src="@drawable/mdi_camera_outline"
                android:layout_gravity="center"
                android:elevation="14dp"/>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <TextView
        android:id="@+id/textVUserNickNameProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Jimena"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toEndOf="@id/FrameLImageProfileFragment"
        app:layout_constraintTop_toTopOf="@+id/FrameLImageProfileFragment"/>
    <TextView
        android:id="@+id/textVUserNameProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Jimena_2003"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/textVUserNickNameProfileFragment"
        app:layout_constraintTop_toBottomOf="@+id/textVUserNickNameProfileFragment"/>

    <com.team2.chitchat.ui.views.ActionItemViewGroup
        android:id="@+id/actionILogoutProfileFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        app:textAction="@string/close_session"
        app:icon="@drawable/logout_24"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@id/FrameLImageProfileFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>